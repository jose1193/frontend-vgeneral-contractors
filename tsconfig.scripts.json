{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "scripts",
    "baseUrl": "."
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
